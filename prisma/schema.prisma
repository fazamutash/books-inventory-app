// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int        @id
  original_title    String?
  language_code     String?
  category          String?
  plot              String?
  content_name      String?
  year              Int?
  copyright         String?
  average_rating    Float?
  similar_books     String[]
  gutenberg         Json?
  language          String?
  release_date      String?
  summary           String?
  content_available Boolean?
  format            String?
  isbn              String?
  author_name       String?
  images            String[]
  title             String?
  rating_count      Int?
  description       String?
  authors           Int[]
  isbn13            String?
  author            Int?
  content_cleaned   Boolean?
  n_authors         Int?
  cover_art         String?
  images_urls       String[]
  genres            String[]
  wikipedia         Json?
  goodreads         Json?
  loc_class         String?
  pages             Int?
  countries         Int[]
  cover             String?
  classes           String[]
  cover_art_url     String?
  contents          Json[]
  authorsOnBooks    AuthorsOnBooks[]
}

model Author {
  id              Int        @id
  name            String?
  bio             String?
  gender          String?
  countries       Int[]
  wikipedia       Json?
  summary         String?
  books           Int[]
  died            String?
  n_books         Int?
  born            String?
  authorsOnBooks  AuthorsOnBooks[]
}

model AuthorsOnBooks {
  id          Int         @id @default(autoincrement())
  bookId      Int
  authorId    Int
  book        Book?       @relation(fields: [bookId], references: [id])
  author      Author?     @relation(fields: [authorId], references: [id])
}
